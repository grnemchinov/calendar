<UserControl x:Class="praktos.CheckBoxWithImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:praktos"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image x:Name="ImageSet" Grid.Row="0" Grid.Column="0" Stretch="Fill" StretchDirection="DownOnly"/>
        <CheckBox x:Name="check_box" Grid.Row="0" Grid.Column="1" Margin="10, 10, 10, 10"/>
    </Grid>
</UserControl>
