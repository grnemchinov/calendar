<Window x:Class="praktos.DayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:praktos"
        mc:Ignorable="d"
        Title="DayWindow" Height="600" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
            
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Content="Что вы сегодня кушали?" FontSize="16" FontFamily="Roboto" Margin="20"/>
        <ListBox x:Name="Items" Grid.Row="1"/>
        <Button x:Name="Save" Content="Сохранить" Grid.Row="2" Margin="60, 20, 60,20" Click="Save_Click"/>
    </Grid>
</Window>
