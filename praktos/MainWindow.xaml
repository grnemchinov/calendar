<Window x:Class="praktos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:praktos"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="prev_month" Grid.Column="0" Grid.Row="0" Margin="30, 20, 30. 20" Content="&lt;" Click="btn_Click"/>
        <Button x:Name="next_month" Grid.Column="2" Grid.Row="0" Margin="30, 20, 30. 20" Content="&gt;" Click="btn_Click"/>
        <DatePicker x:Name="date_choose" Grid.Column="1" Grid.Row="0" Margin="20, 20, 20. 20" SelectedDateFormat="Long" SelectedDateChanged="date_choose_SelectedDateChanged"/>
        <WrapPanel x:Name="wrap_panel" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="10, 10, 10, 10"/>

    </Grid>
</Window>
